#!/bin/bash

function show_help {
    echo "Usage: ./run-test 
        <-r|-region> [Nordic|Japan] 
        <-c|-country> [Norway|Denmark]
        <-t|-tag> [E2E|Demo]"
}

while [ -n "$1" ];
do
    case "$1"
    in
        -r | -region)               shift; REGION=${1};;
        -c | -country)              shift; COUNTRY=${1};;
        -t | -tag)                  shift; TAG=${1};;
    esac
    shift
done    
# EXECUTE
mvn clean test -Dkarate.options="-t @${TAG}" -Dkarate.region="${REGION}" -Dkarate.country="${COUNTRY}"
cd "$THIS_CWD"


